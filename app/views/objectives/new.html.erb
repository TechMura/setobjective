<div class="contents">
  <div class="container">
    <h1>目標入力画面</h1>
    <%= form_with model: @objective, url: objectives_path, id: 'form-objective', class: 'form-objective', local: true do |f| %>
      <%= render 'shared/error_messaes', model: f.object %>

      <div class="objective-field">
        <%= f.label :declaration %><span>必須</span><br />
        <%= f.text_field :declaration, autofocus: true %>
      </div>
      
      <div class="objective-field">
        <%= f.label :reason %><span>必須</span><br />
        <%= f.text_field :reason, autofocus: true %>
      </div>

      <div class="objective-field">
        <%= f.label :reward %><br />
        <%= f.text_field :reward, autofocus: true %>
      </div>
      
      <div class="check-field">
        <%= f.check_box :set_flag %>
        <span>今の目標に設定するならチェック<span>
      </div>

      <div class="objective-action">
        <%= f.submit "次へ" , class: "objective-action-btn"%>
      </div>
    <% end %>
  </div>
</div>